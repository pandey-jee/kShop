# Production Environment Variables for Frontend
# Copy this file to .env.production and fill in the actual values
# Note: VITE_ prefix is required for Vite to expose variables to browser

# API Configuration
VITE_API_URL=${VITE_API_URL}
VITE_API_VERSION=v1

# Cloudinary Configuration
VITE_CLOUDINARY_CLOUD_NAME=${VITE_CLOUDINARY_CLOUD_NAME}
VITE_CLOUDINARY_API_KEY=${VITE_CLOUDINARY_API_KEY}
VITE_CLOUDINARY_UPLOAD_PRESET=${VITE_CLOUDINARY_UPLOAD_PRESET}

# Payment Gateway (Razorpay Live Keys)
VITE_RAZORPAY_KEY_ID=${VITE_RAZORPAY_LIVE_KEY_ID}

# Site Configuration
VITE_SITE_URL=${VITE_SITE_URL}
VITE_SITE_NAME="Panditji Auto Connect"
VITE_SITE_DESCRIPTION="India's Premier Auto Parts & Accessories Marketplace"

# Contact Information
VITE_CONTACT_EMAIL=${VITE_CONTACT_EMAIL}
VITE_CONTACT_PHONE=${VITE_CONTACT_PHONE}
VITE_CONTACT_ADDRESS=${VITE_CONTACT_ADDRESS}

# Social Media Links
VITE_FACEBOOK_URL=${VITE_FACEBOOK_URL}
VITE_INSTAGRAM_URL=${VITE_INSTAGRAM_URL}
VITE_TWITTER_URL=${VITE_TWITTER_URL}
VITE_YOUTUBE_URL=${VITE_YOUTUBE_URL}
VITE_LINKEDIN_URL=${VITE_LINKEDIN_URL}

# Analytics & Tracking
VITE_GOOGLE_ANALYTICS_ID=${VITE_GOOGLE_ANALYTICS_ID}
VITE_GOOGLE_TAG_MANAGER_ID=${VITE_GOOGLE_TAG_MANAGER_ID}
VITE_FACEBOOK_PIXEL_ID=${VITE_FACEBOOK_PIXEL_ID}

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true

# CDN/Asset URLs
VITE_ASSET_CDN_URL=${VITE_ASSET_CDN_URL}
VITE_IMAGE_CDN_URL=${VITE_IMAGE_CDN_URL}

# SEO Configuration
VITE_CANONICAL_URL=${VITE_CANONICAL_URL}
VITE_OG_IMAGE=${VITE_OG_IMAGE}

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_VERSION=1.0.0

# Third-party Services
VITE_MAPS_API_KEY=${VITE_MAPS_API_KEY}
VITE_RECAPTCHA_SITE_KEY=${VITE_RECAPTCHA_SITE_KEY}

# Error Tracking
VITE_SENTRY_DSN=${VITE_SENTRY_DSN}
VITE_SENTRY_ENVIRONMENT=production

# Chat Support
VITE_CHAT_WIDGET_ID=${VITE_CHAT_WIDGET_ID}
VITE_ZENDESK_KEY=${VITE_ZENDESK_KEY}

# Development/Debug (set to false in production)
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false
VITE_ASSET_CDN_URL=https://your-cdn-domain.com

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/pandijiautoconnect
VITE_INSTAGRAM_URL=https://instagram.com/pandijiautoconnect
VITE_TWITTER_URL=https://twitter.com/pandijiautoconnect
